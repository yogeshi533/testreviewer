<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- http://blogs.msdn.com/b/wpf/archive/2010/11/30/systemcolors-reference.aspx -->

    <SolidColorBrush x:Key="LightBackground" Color="{StaticResource {x:Static SystemColors.ControlLightLightColorKey}}"/>

    <SolidColorBrush x:Key="LightForeground" Color="{StaticResource {x:Static SystemColors.ControlTextColorKey}}"/>


    <SolidColorBrush x:Key="DefaultBackground" Color="{StaticResource {x:Static SystemColors.ControlColorKey}}"/>


    <SolidColorBrush x:Key="DarkForeground" Color="{StaticResource {x:Static SystemColors.ControlTextColorKey}}"/>

    <SolidColorBrush x:Key="DarkBackground" Color="#FFEEEEF2"/>

    <SolidColorBrush x:Key="DarkBorderBrush" Color="#FFCCCEDB"/>


    <SolidColorBrush x:Key="ActiveBackground" Color="{StaticResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>

    <SolidColorBrush x:Key="ActiveForeground" Color="{StaticResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>


    <SolidColorBrush x:Key="DisabledForeground" Color="{StaticResource {x:Static SystemColors.GrayTextColorKey}}"/>


    <SolidColorBrush x:Key="ErrorForeground" Color="Red"/>

</ResourceDictionary>